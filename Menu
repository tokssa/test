	;;

	00) # ==================================================================================================================

if  -e /usr/local/bin/Check-Thai ; then
	rm -f /usr/local/bin/Check-Thai
	menu
elif  ! -e /usr/local/bin/Check-Thai ; then
	echo "Check Thai" >> /usr/local/bin/Check-Thai
	menu
fi

	;;

esac
